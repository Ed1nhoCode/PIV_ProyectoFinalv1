@model PIV_ProyectoFinalv1.Models.DetalleFactura

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>DetalleFactura</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayName("Id Cliente")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdFacturaNavigation.IdCliente)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayName("Codigo de Factura")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdFacturaNavigation.IdFactura)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayName("Fecha Compra")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdFacturaNavigation.FechaFactura)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayName("Metodo de pago")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdFacturaNavigation.IdPago)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayName("Codigo del producto")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdProductoNavigation.IdProducto)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayName("Descripcion")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdProductoNavigation.Descripcion)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayName("Cantidad")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cantidad)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayName("Subtotal")
        </dt>
        <dd class="col-sm-10">
            @{
                double subtotal = Model.Cantidad * Model.IdProductoNavigation.Precio;
            }            
            @subtotal
           </dd>

        <dt class="col-sm-2">
            @Html.DisplayName("Total")
        </dt>
        <dd class="col-sm-10">
            @{
                double total = (subtotal * 0.13) + subtotal;
            }

            @total
        </dd>

  
